<input class="form-control" placeholder="User code" type="text" id="userCode" />
<script>
  import { usercode } from "./stream.state";

  const code = document.querySelector<HTMLInputElement>("input#userCode");
  code?.addEventListener("input", (ev) => usercode.set(code.value));
  usercode.subscribe((value) => (code ? (code.value = value) : null));
</script>
